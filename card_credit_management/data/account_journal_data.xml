<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Create Surcharge Product -->
        <record id="product_card_surcharge" model="product.product">
            <field name="name">Credit Card Surcharge</field>
            <field name="type">service</field>
            <field name="invoice_policy">order</field>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="list_price">0.0</field>
            <field name="standard_price">0.0</field>
            <field name="default_code">CARD_SURCHARGE</field>
        </record>

        <!-- Sample Credit Card Journals -->
        <record id="journal_visa" model="account.journal">
            <field name="name">Visa</field>
            <field name="code">VISA</field>
            <field name="type">bank</field>
            <field name="is_credit_card">True</field>
        </record>

        <record id="journal_mastercard" model="account.journal">
            <field name="name">Mastercard</field>
            <field name="code">MCARD</field>
            <field name="type">bank</field>
            <field name="is_credit_card">True</field>
        </record>

        <record id="journal_cabal" model="account.journal">
            <field name="name">Cabal</field>
            <field name="code">CABAL</field>
            <field name="type">bank</field>
            <field name="is_credit_card">True</field>
        </record>

    </data>
</odoo>