<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Credit Card Plan List View -->
        <record id="view_card_plan_tree" model="ir.ui.view">
            <field name="name">card.plan.list</field>
            <field name="model">card.plan</field>
            <field name="arch" type="xml">
                <list string="Credit Card Plans">
                    <field name="name"/>
                    <field name="journal_id"/>
                    <field name="accreditation_days"/>
                    <field name="fee_percentage"/>
                    <field name="financial_cost_percentage"/>
                    <field name="surcharge_coefficient"/>
                    <field name="rounding_factor"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Credit Card Plan Form View -->
        <record id="view_card_plan_form" model="ir.ui.view">
            <field name="name">card.plan.form</field>
            <field name="model">card.plan</field>
            <field name="arch" type="xml">
                <form string="Credit Card Plan">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" 
                                    class="oe_stat_button" icon="fa-archive"
                                    invisible="active">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Archived</span>
                                </div>
                            </button>
                        </div>
                        
                        <group>
                            <group name="general">
                                <field name="active" invisible="1"/>
                                <field name="name"/>
                                <field name="journal_id"/>
                                <field name="accreditation_days"/>
                            </group>
                            <group name="percentages">
                                <field name="fee_percentage"/>
                                <field name="financial_cost_percentage"/>
                                <field name="surcharge_coefficient"/>
                                <field name="rounding_factor"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page name="accounts" string="Accounts Configuration">
                                <group>
                                    <group name="fee_accounts">
                                        <field name="fee_account_id"/>
                                        <field name="vat_account_id"/>
                                    </group>
                                    <group name="cost_accounts">
                                        <field name="financial_cost_account_id"/>
                                        <field name="gross_income_account_id"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Credit Card Plan Search View -->
        <record id="view_card_plan_search" model="ir.ui.view">
            <field name="name">card.plan.search</field>
            <field name="model">card.plan</field>
            <field name="arch" type="xml">
                <search string="Credit Card Plans">
                    <field name="name"/>
                    <field name="journal_id"/>
                    <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                    <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Journal" name="group_journal" context="{'group_by': 'journal_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Credit Card Plan Action -->
        <record id="action_card_plan" model="ir.actions.act_window">
            <field name="name">Credit Card Plans</field>
            <field name="res_model">card.plan</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first credit card plan!
                </p>
                <p>
                    Configure credit card plans with their respective fees, 
                    financial costs, and accreditation terms.
                </p>
            </field>
        </record>

    </data>
</odoo>