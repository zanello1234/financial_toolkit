<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Holiday Tree View -->
        <record id="view_holiday_tree" model="ir.ui.view">
            <field name="name">card.holiday.list</field>
            <field name="model">card.holiday</field>
            <field name="arch" type="xml">
                <list string="Holidays">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="recurring"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Holiday Form View -->
        <record id="view_holiday_form" model="ir.ui.view">
            <field name="name">card.holiday.form</field>
            <field name="model">card.holiday</field>
            <field name="arch" type="xml">
                <form string="Holiday">
                    <sheet>
                        <group>
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="name"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="recurring"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes" placeholder="Additional notes about this holiday..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Holiday Calendar View -->
        <record id="view_holiday_calendar" model="ir.ui.view">
            <field name="name">card.holiday.calendar</field>
            <field name="model">card.holiday</field>
            <field name="arch" type="xml">
                <calendar string="Holidays Calendar" 
                         date_start="date" 
                         color="recurring"
                         mode="month">
                    <field name="name"/>
                    <field name="recurring"/>
                </calendar>
            </field>
        </record>

        <!-- Holiday Search View -->
        <record id="view_holiday_search" model="ir.ui.view">
            <field name="name">card.holiday.search</field>
            <field name="model">card.holiday</field>
            <field name="arch" type="xml">
                <search string="Holidays">
                    <field name="name"/>
                    <field name="date"/>
                    <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                    <filter name="recurring" string="Recurring" domain="[('recurring', '=', True)]"/>
                    <filter name="current_year" string="Current Year" 
                            domain="[('date', '&gt;=', context_today().replace(month=1, day=1)), 
                                     ('date', '&lt;=', context_today().replace(month=12, day=31))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Month" name="group_month" context="{'group_by': 'date:month'}"/>
                        <filter string="Year" name="group_year" context="{'group_by': 'date:year'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Holiday Action -->
        <record id="action_holiday" model="ir.actions.act_window">
            <field name="name">Holidays</field>
            <field name="res_model">card.holiday</field>
            <field name="view_mode">list,form,calendar</field>
            <field name="context">{'search_default_active': 1, 'search_default_current_year': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configure holidays for credit card accreditation calculation!
                </p>
                <p>
                    Add national holidays and special dates that affect 
                    the calculation of business days for credit card accreditation.
                </p>
            </field>
        </record>

    </data>
</odoo>