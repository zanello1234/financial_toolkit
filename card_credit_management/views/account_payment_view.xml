<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Account Payment Form View Extension -->
        <record id="view_account_payment_form_card" model="ir.ui.view">
            <field name="name">account.payment.form.card</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="priority">50</field>
            <field name="arch" type="xml">
                
                <!-- Add credit card fields after journal -->
                <field name="journal_id" position="after">
                    <field name="card_plan_id" 
                           invisible="not journal_id"
                           readonly="state != 'draft'"
                           domain="[('journal_id', '=', journal_id)]"
                           options="{'no_create': True}"/>
                    <field name="card_batch_number" 
                           invisible="not journal_id or not journal_id.is_credit_card"
                           readonly="state != 'draft'"/>
                    <field name="card_coupon_number" 
                           invisible="not journal_id or not journal_id.is_credit_card"
                           readonly="state != 'draft'"/>
                </field>

                <!-- Add Credit Card Estimation tab after existing tabs -->
                <xpath expr="//notebook/page[last()]" position="after">
                    <page string="Credit Card Estimation" name="card_estimation" 
                          invisible="not journal_id or not journal_id.is_credit_card or not card_plan_id">
                        <group>
                            <group string="Card Plan Information">
                                <field name="card_plan_id" readonly="1" options="{'no_create': True}"/>
                                <field name="card_plan_fee_percentage" readonly="1" string="Fee Percentage" 
                                       widget="percentage"/>
                                <field name="card_plan_financial_cost_percentage" readonly="1" 
                                       string="Financial Cost Percentage" widget="percentage"
                                       invisible="card_plan_financial_cost_percentage == 0"/>
                                <field name="estimated_accreditation_date" readonly="1"/>
                            </group>
                            
                            <group string="Amount Breakdown">
                                <field name="amount" string="Original Amount" readonly="1" 
                                       widget="monetary" options="{'currency_field': 'currency_id'}"
                                       style="font-weight: bold;"/>
                                
                                <field name="estimated_fee_amount" readonly="1" string="Processing Fee" 
                                       widget="monetary" options="{'currency_field': 'currency_id'}"
                                       class="text-danger" style="font-weight: bold;"/>
                                
                                <field name="estimated_financial_cost_amount" readonly="1" 
                                       string="Financial Cost" 
                                       widget="monetary" options="{'currency_field': 'currency_id'}"
                                       class="text-warning" style="font-weight: bold;"
                                       invisible="estimated_financial_cost_amount == 0"/>
                                
                                <separator/>
                                
                                <field name="estimated_liquidation_amount" readonly="1" 
                                       string="Net Amount (After Deductions)"
                                       widget="monetary" options="{'currency_field': 'currency_id'}"
                                       class="text-success" 
                                       style="font-weight: bold; font-size: 14px;"/>
                            </group>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>

        <!-- Account Payment Tree View Extension - Temporarily disabled for Odoo 18 compatibility -->
