<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Add to Batch Wizard Form View -->
        <record id="view_card_add_to_batch_wizard_form" model="ir.ui.view">
            <field name="name">card.add.to.batch.wizard.form</field>
            <field name="model">card.add.to.batch.wizard</field>
            <field name="arch" type="xml">
                <form string="Add to Batch Transfer">
                    <group>
                        <group>
                            <field name="accreditation_count" readonly="1"/>
                            <field name="total_amount" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="batch_transfer_id" required="1"/>
                        </group>
                    </group>
                    
                    <group string="Accreditations to Add">
                        <field name="accreditation_ids" nolabel="1" readonly="1">
                            <list>
                                <field name="collection_date"/>
                                <field name="partner_id"/>
                                <field name="journal_id"/>
                                <field name="batch_number"/>
                                <field name="coupon_number"/>
                                <field name="net_amount"/>
                                <field name="state"/>
                            </list>
                        </field>
                    </group>
                    
                    <footer>
                        <button name="action_add_to_batch" 
                                type="object" 
                                string="Add to Batch" 
                                class="btn-primary"/>
                        <button string="Cancel" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>