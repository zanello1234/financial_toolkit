<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Partner Assignment Wizard Form -->
    <record id="view_account_partner_assignment_wizard_form" model="ir.ui.view">
        <field name="name">account.partner.assignment.wizard.form</field>
        <field name="model">account.partner.assignment.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Partners to Account">
                <sheet>
                    <group>
                        <field name="account_id" readonly="1"/>
                        <field name="action_type"/>
                    </group>
                    
                    <group string="Partners">
                        <field name="partner_ids" 
                               widget="many2many_tags"
                               nolabel="1"
                               context="{'default_is_company': False}"
                               options="{'no_create': True}"/>
                    </group>
                </sheet>
                
                <footer>
                    <button name="action_assign_partners" 
                            string="Apply Assignment" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>