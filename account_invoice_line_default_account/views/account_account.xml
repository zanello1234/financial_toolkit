<odoo>
    <!-- Vista de lista del plan contable con partners asociados -->
    <record id="view_account_list_partner_info" model="ir.ui.view">
        <field name="name">account.account.tree.partner.info</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_list" />
        <field name="arch" type="xml">
            <field name="account_type" position="after">
                <field name="expense_partner_names" string="Expense Partners" optional="hide" readonly="1"/>
                <field name="income_partner_names" string="Income Partners" optional="hide" readonly="1"/>
            </field>
        </field>
    </record>

    <!-- Vista de formulario del plan contable con partners asociados -->
    <record id="view_account_form_partner_info" model="ir.ui.view">
        <field name="name">account.account.form.partner.info</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Associated Partners" groups="account.group_account_manager">
                    <group>
                        <group string="Partner Summary (Read-only)">
                            <field name="expense_partner_names" string="Current Expense Partners" readonly="1"/>
                            <field name="income_partner_names" string="Current Income Partners" readonly="1"/>
                        </group>
                    </group>
                    <separator string="Partner Details"/>
                    <group>
                        <group string="Partners using as Expense Account">
                            <field name="expense_partner_ids" nolabel="1" widget="many2many_tags" readonly="1"/>
                        </group>
                        <group string="Partners using as Income Account">
                            <field name="income_partner_ids" nolabel="1" widget="many2many_tags" readonly="1"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>