    <record id="action_report_account_transfer" model="ir.actions.report">
        <field name="name">Reporte de Transferencia</field>
        <field name="model">account.payment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">account_internal_transfer.report_account_transfer</field>
        <field name="report_file">account_internal_transfer.report_account_transfer</field>
