<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Financial Toolkit Dashboard View -->
    <record id="view_financial_toolkit_form" model="ir.ui.view">
        <field name="name">financial.toolkit.form</field>
        <field name="model">financial.toolkit</field>
        <field name="arch" type="xml">
            <form string="Financial Toolkit Dashboard">
                <header>
                    <button name="action_install_missing_modules" 
                            string="Install Missing Modules" 
                            type="object" 
                            class="btn-primary"
                            icon="fa-download"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <p class="text-muted">
                            Comprehensive financial management toolkit for Odoo
                        </p>
                    </div>
                    
                    <!-- Module Status Section -->
                    <group string="Installed Modules Status" col="2">
                        <field name="bank_reconcile_receipts_installed" widget="boolean_toggle"/>
                        <field name="credit_card_journal_installed" widget="boolean_toggle"/>
                        <field name="journal_partner_restriction_installed" widget="boolean_toggle"/>
                        <field name="liquidity_journal_actions_installed" widget="boolean_toggle"/>
                        <field name="account_internal_transfer_installed" widget="boolean_toggle"/>
                    </group>
                    
                    <!-- Quick Actions Section -->
                    <group string="Quick Actions" col="2">
                        <button name="action_open_bank_reconciliation" 
                                string="Bank Reconciliation" 
                                type="object" 
                                class="btn-secondary"
                                icon="fa-bank"
                                help="Open enhanced bank reconciliation with receipt/payment creation"/>
                        
                        <button name="action_open_reconcile_models" 
                                string="Reconciliation Models" 
                                type="object" 
                                class="btn-secondary"
                                icon="fa-cogs"
                                help="Configure automatic reconciliation rules"/>
                        
                        <button name="action_open_journal_config" 
                                string="Journal Configuration" 
                                type="object" 
                                class="btn-secondary"
                                icon="fa-book"
                                help="Configure journals and partner restrictions"/>
                        
                        <button name="action_open_payments" 
                                string="Payments" 
                                type="object" 
                                class="btn-secondary"
                                icon="fa-credit-card"
                                help="View and manage payments"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Financial Toolkit Action -->
    <record id="action_financial_toolkit" model="ir.actions.act_window">
        <field name="name">Financial Toolkit</field>
        <field name="res_model">financial.toolkit</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'form_view_initial_mode': 'edit'}</field>
    </record>

    <!-- Main Menu Item -->
    <menuitem id="menu_financial_toolkit_root"
              name="Financial Toolkit"
              sequence="5"
              web_icon="financial_toolkit,static/description/icon.png"/>

    <menuitem id="menu_financial_toolkit_dashboard"
              name="Dashboard"
              parent="menu_financial_toolkit_root"
              action="action_financial_toolkit"
              sequence="1"/>

</odoo>