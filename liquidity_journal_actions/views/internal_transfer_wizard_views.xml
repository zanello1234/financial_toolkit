<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_internal_transfer_wizard_form" model="ir.ui.view">
        <field name="name">internal.transfer.wizard.form</field>
        <field name="model">internal.transfer.wizard</field>
        <field name="arch" type="xml">
            <form string="Transferencia Interna">
                <div class="oe_title">
                    <h1>
                        <i class="fa fa-exchange text-primary"/> Transferencia Interna
                    </h1>
                    <p class="text-muted">Transfiera dinero entre diarios de liquidez</p>
                </div>
                
                <sheet>
                    <!-- Secci칩n de Origen y Destino con iconos -->
                    <div class="row mt-3">
                        <div class="col-md-5">
                            <div class="card border-success">
                                <div class="card-header bg-success text-white">
                                    <h5 class="card-title mb-0">
                                        <i class="fa fa-sign-out"/> DESDE (ORIGEN)
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <group>
                                        <field name="source_journal_id" options="{'no_create': True, 'no_edit': True}"/>
                                        <field name="source_journal_name" readonly="1" invisible="1"/>
                                        <field name="source_currency_id" readonly="1" invisible="1"/>
                                        <field name="source_company_currency" invisible="1"/>
                                        
                                        <!-- Informaci칩n visual de la moneda origen -->
                                        <div class="alert alert-success" style="margin-bottom: 0;" invisible="not source_journal_id">
                                            <div class="d-flex align-items-center">
                                                <i class="fa fa-money fa-2x text-success me-3"/>
                                                <div>
                                                    <strong>Moneda: </strong>
                                                    <field name="source_currency_id" readonly="1" nolabel="1" class="ms-1"/>
                                                    <div class="text-muted small">
                                                        <span invisible="not source_company_currency">Moneda de la empresa</span>
                                                        <span invisible="source_company_currency">Moneda extranjera</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </group>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Flecha central -->
                        <div class="col-md-2 d-flex align-items-center justify-content-center">
                            <div class="text-center">
                                <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center" 
                                     style="width: 60px; height: 60px;">
                                    <i class="fa fa-arrow-right fa-2x text-white"/>
                                </div>
                                <div class="mt-2">
                                    <span class="badge badge-primary">TRANSFERIR</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-5">
                            <div class="card border-warning">
                                <div class="card-header bg-warning text-white">
                                    <h5 class="card-title mb-0">
                                        <i class="fa fa-sign-in"/> HACIA (DESTINO)
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <group>
                                        <field name="destination_journal_id" options="{'no_create': True, 'no_edit': True}"/>
                                        <field name="destination_journal_name" readonly="1" invisible="1"/>
                                        <field name="destination_currency_id" readonly="1" invisible="1"/>
                                        <field name="destination_company_currency" invisible="1"/>
                                        
                                        <!-- Informaci칩n visual de la moneda destino -->
                                        <div class="alert alert-warning" style="margin-bottom: 0;" invisible="not destination_journal_id">
                                            <div class="d-flex align-items-center">
                                                <i class="fa fa-money fa-2x text-warning me-3"/>
                                                <div>
                                                    <strong>Moneda: </strong>
                                                    <field name="destination_currency_id" readonly="1" nolabel="1" class="ms-1"/>
                                                    <div class="text-muted small">
                                                        <span invisible="not destination_company_currency">Moneda de la empresa</span>
                                                        <span invisible="destination_company_currency">Moneda extranjera</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </group>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Campos ocultos computados -->
                    <field name="is_multicurrency" invisible="1"/>
                    <field name="show_exchange_rate" invisible="1"/>
                    <field name="transfer_currency_name" invisible="1"/>
                    <field name="transfer_type_description" invisible="1"/>
                    <field name="available_currency_ids" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="company_currency_id" invisible="1"/>
                    
                    <!-- Alerta para transferencias multicurrency -->
                    <div class="alert alert-info mt-3" invisible="not is_multicurrency">
                        <i class="fa fa-info-circle"/> 
                        <strong>Transferencia Multi-moneda:</strong> 
                        Esta transferencia involucra diferentes monedas. Se crear치 un asiento contable balanceado usando la cuenta de transferencia interna.
                    </div>
                    
                    <!-- Datos de la transferencia -->
                    <div class="card mt-3">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">
                                <i class="fa fa-calculator"/> Datos de la Transferencia
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <group>
                                        <label for="amount">
                                            <i class="fa fa-dollar text-success"/> Monto a Transferir
                                        </label>
                                        <field name="amount" nolabel="1" class="oe_inline"/>
                                        
                                        <!-- Nuevo campo para monto en moneda empresa -->
                                        <label for="amount_company_currency">
                                            <i class="fa fa-calculator text-warning"/> Total en Moneda Empresa
                                        </label>
                                        <field name="amount_company_currency" nolabel="1" 
                                               class="oe_inline text-warning font-weight-bold"
                                               decoration-warning="amount_company_currency"/>
                                        
                                        <label for="date">
                                            <i class="fa fa-calendar text-info"/> Fecha
                                        </label>
                                        <field name="date" nolabel="1"/>
                                    </group>
                                </div>
                                <div class="col-md-6">
                                    <group>
                                        <!-- Mostrar claramente la divisa que se transfiere - EDITABLE -->
                                        <label for="transfer_currency_id">
                                            <i class="fa fa-money text-primary"/> Divisa a Transferir
                                        </label>
                                        <field name="transfer_currency_id" nolabel="1" 
                                               domain="[('id', 'in', available_currency_ids)]"
                                               options="{'no_create': True, 'no_edit': True}"
                                               class="text-primary font-weight-bold"
                                               required="1"/>
                                        
                                        <label for="transfer_type_description">
                                            <i class="fa fa-exchange text-info"/> Tipo de Transferencia
                                        </label>
                                        <field name="transfer_type_description" nolabel="1" 
                                               class="text-info"/>
                                        
                                        <field name="exchange_rate" invisible="not show_exchange_rate"
                                               string="Tipo de Cambio a ARS"
                                               help="Tipo de cambio de la moneda origen a pesos argentinos"
                                               decoration-info="show_exchange_rate"/>
                                        
                                        <label for="memo">
                                            <i class="fa fa-comment text-muted"/> Descripci칩n
                                        </label>
                                        <field name="memo" nolabel="1" placeholder="Descripci칩n de la transferencia"/>
                                    </group>
                                </div>
                            </div>
                            
                            <!-- Informaci칩n adicional para multi-moneda -->
                            <div class="alert alert-warning mt-3" invisible="not show_exchange_rate">
                                <i class="fa fa-exchange"/> 
                                <strong>Informaci칩n del Tipo de Cambio:</strong><br/>
                                El tipo de cambio se aplica para convertir el monto origen a pesos argentinos.
                                Puede modificar el tipo de cambio si es necesario.
                            </div>
                            
                            <!-- Informaci칩n sobre el campo de monto empresa -->
                            <div class="alert alert-info mt-3" invisible="not is_multicurrency">
                                <i class="fa fa-calculator"/> 
                                <strong>Monto en Moneda Empresa:</strong><br/>
                                Este campo muestra el equivalente en pesos argentinos. Si lo edita, se recalcular치 autom치ticamente el tipo de cambio.
                            </div>
                        </div>
                    </div>
                </sheet>
                
                <footer>
                    <button string="Crear Transferencia" 
                            name="action_create_transfer" 
                            type="object" 
                            class="btn-primary"
                            icon="fa-check"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>