<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Reglas de acceso adicionales para el wizard -->
        <record id="currency_exchange_wizard_rule" model="ir.rule">
            <field name="name">Currency Exchange Wizard: Access Rule</field>
            <field name="model_id" ref="model_currency_exchange_wizard"/>
            <field name="groups" eval="[(4, ref('account.group_account_basic'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>